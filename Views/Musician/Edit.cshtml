@model NoTownMusicalStore.Models.Entities.Musician


<form class="w-40" asp-action="Update" method="post">
    <h2 class="pb-10">Update Musician</h2>
    <input type="hidden" class="input" asp-for="SSN">

    <div class="input-container">
        <label asp-for="Name" class="w-40">Name</label>
        <input type="text" class="input" asp-for="Name">
    </div>
    <div class="input-container">
        <label asp-for="PhoneNumber" class="w-40">Phone Number</label>
        <input type="text" class="input" asp-for="PhoneNumber">
    </div>
    <div class="input-container">
        <label asp-for="Address" class="w-40">Address</label>
        <input type="text" class="input" asp-for="Address">
    </div>

    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Name"> </span>
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="PhoneNumber"> </span>
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Address"> </span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Save</button>
        <a class="btn btn-sec" href="/Genre/GenreList">All records</a>
    </div>
</form>